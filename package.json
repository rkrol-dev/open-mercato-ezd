{
  "name": "open-mercato",
  "version": "0.4.3",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": "24.x"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn build:packages && yarn watch:packages & sleep 3 && yarn dev:app",
    "dev:greenfield": "yarn build:packages && yarn generate && yarn initialize -- --reinstall && yarn dev",
    "dev:app": "turbo run dev --filter=@open-mercato/app",
    "watch:packages": "turbo run watch --filter='./packages/*' --parallel",
    "build": "yarn build:packages && yarn generate && yarn build:packages && yarn build:app",
    "build:app": "turbo run build --filter=@open-mercato/app",
    "build:packages": "turbo run build --filter='./packages/*'",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "start": "turbo run start --filter=@open-mercato/app",
    "generate": "turbo run generate --filter=@open-mercato/app",
    "reinstall": "turbo run reinstall --filter=@open-mercato/app",
    "db:generate": "turbo run db:generate --filter=@open-mercato/app",
    "db:migrate": "turbo run db:migrate --filter=@open-mercato/app",
    "db:greenfield": "turbo run db:greenfield --filter=@open-mercato/app",
    "initialize": "turbo run initialize --filter=@open-mercato/app",
    "docs:dev": "turbo run dev --filter=@open-mercato/docs",
    "clean:generated": "./scripts/clean-generated.sh",
    "clean:packages": "./scripts/clean-packages.sh",
    "clean": "yarn clean:generated && yarn clean:packages",
    "install-skills": "./scripts/install-skills.sh",
    "mcp:serve": "turbo run mcp:serve --filter=@open-mercato/ai-assistant",
    "mcp:dev": "turbo run mcp:dev --filter=@open-mercato/ai-assistant",
    "registry:setup-user": "./scripts/registry/setup-user.sh",
    "registry:publish": "./scripts/registry/publish.sh",
    "release:canary": "./scripts/release-canary.sh",
    "release:patch": "./scripts/release-patch.sh",
    "release:minor": "./scripts/release-minor.sh",
    "release:major": "./scripts/release-major.sh"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.80",
    "@mikro-orm/core": "^6.6.2",
    "@mikro-orm/migrations": "^6.6.2",
    "@mikro-orm/postgresql": "^6.6.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-email/components": "^1.0.1",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-table": "^8.20.5",
    "@uiw/react-markdown-preview": "^5.1.5",
    "@uiw/react-md-editor": "^4.0.11",
    "@xyflow/react": "^12.10.0",
    "ai": "^5.0.108",
    "awilix": "^12.0.5",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.556.0",
    "newrelic": "^13.7.0",
    "next": "16.1.5",
    "pdf2pic": "^3.2.0",
    "pg": "8.16.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-email": "^5.0.6",
    "remark-gfm": "^4.0.1",
    "resend": "^6.5.2",
    "semver": "^7.7.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.0.0",
    "@types/react-big-calendar": "^1.16.3",
    "@types/semver": "^7.7.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.39.1",
    "glob": "^11.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "openapi-typescript": "^7.10.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "pg": "8.16.3",
    "zod": "4.1.13",
    "lodash-es": "4.17.23"
  }
}
